{
  "compilerOptions": {
    "lib": ["es2021", "DOM"],  
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": false,      
    "skipLibCheck": true,          
    "allowSyntheticDefaultImports": false 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}